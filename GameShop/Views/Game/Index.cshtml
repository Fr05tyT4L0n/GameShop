@model IEnumerable<GameShop.Models.GameTable>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1>Games</h1>
</div>

<div class="container my-4">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4">
        @foreach (var game in Model)
        {
            <div class="col">
                <div class="card h-100" style="border-radius: 10px; overflow: hidden;">
                    <img src="@game.gameImage" class="card-img-top" alt="@game.gameName" style="height: 300px; object-fit: cover;" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@game.gameName</h5>
                        <p class="card-text text-muted">This is a brief detail about @game.gameName. An Open World game Triple A game.</p>
                        <div class="d-flex justify-content-between py-2 mt-auto">
                            <p class="card-text mb-0">Stock: <strong>@game.gameStock</strong></p>
                            <p class="card-text mb-0">Price: <strong>@game.gamePrice</strong></p>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a href="#" class="btn btn-success w-100">BUY</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
