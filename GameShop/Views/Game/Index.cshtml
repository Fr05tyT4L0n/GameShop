@model IEnumerable<GameShop.Models.GameTable>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h2 class="text-center text-white">เกมทั้งหมด</h2>
</div>

<div class="container my-4 text-white">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4">
        @foreach (var game in Model)
        {
            <div class="col">
                <div class="card h-100" style="border-radius: 15px; overflow: hidden;">
                    <img src="@game.gameImage" class="card-img-top" alt="@game.gameName" style="height: 350px; object-fit: cover;" />
                    <div class="card-body d-flex flex-column" style="background: #222831;">
                        <p class="card-text text-white">ประเภท : <strong>@game.category.categoryName</strong></p>
                        <h5 class="card-title">@game.gameName</h5>
                        <div class="d-flex justify-content-between py-2 mt-auto">
                            <p class="card-text mb-0">คงเหลือ : <strong class="text-success">@game.gameStock</strong> ชิ้น</p>
                            <p class="card-text mb-0">ราคา : <strong class="text-danger">@game.gamePrice.ToString("#,##0.##")</strong> บาท</p>
                        </div>
                    </div>
                    <div class="card-footer" style="background: #181C22;">
                        @* <a href="/" class="btn w-100 text-white btn-custom">สั่งซื้อ</a> *@
                        <button class="btn w-100 text-white btn-custom" onclick="addToCart('@game.gameId', '@game.gameName', @game.gamePrice, '@game.gameImage')">
                            สั่งซื้อ
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .btn-custom {
        background: #00ADB5;
        transition: .3s ease all;
    }

    .btn-custom:hover {
        background: #006469;
    }
</style>