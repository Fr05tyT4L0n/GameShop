@model IEnumerable<GameShop.Models.GameTable>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1>เกมทั้งหมด</h1>
</div>

<div class="container my-4">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4">
        @foreach (var game in Model)
        {
            <div class="col">
                <div class="card h-100" style="border-radius: 10px; overflow: hidden;">
                    <img src="@game.gameImage" class="card-img-top" alt="@game.gameName" style="height: 350px; object-fit: cover;" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@game.gameName</h5>
                        @* <p class="card-text text-muted">เกี่ยวกับเกมนั้น อธิบาย...</p> *@
                        <div class="d-flex justify-content-between py-2 mt-auto">
                            <p class="card-text mb-0">คงเหลือ : <strong class="text-success">@game.gameStock</strong> ชิ้น</p>
                            <p class="card-text mb-0">ราคา : <strong class="text-danger">@game.gamePrice</strong> บาท</p>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a href="/" class="btn btn-success w-100">สั่งซื้อ</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
