@model IEnumerable<GameShop.Models.GameTable>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1>Admin Panel</h1>
</div>

<div class="container my-4">
    <!-- Add New Button -->
    <div class="d-flex justify-content-end">
        <button class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#addGameModal">
            Add New Game
        </button>
    </div>

    <!-- Table for Games -->
    <table class="table table-striped table-bordered text-center align-middle">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Image</th>
                <th>Name</th>
                <th>Stock</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int index = 1;
                foreach (var game in Model)
                {
                    <tr>
                        <td>@index</td>
                        <td class="text-center">
                            <img src="@game.gameImage" alt="@game.gameName" style="width: 100px; height: 100px; object-fit: cover;">
                        </td>
                        <td>@game.gameName</td>
                        <td>@game.gameStock</td>
                        <td>@game.gamePrice</td>
                        <td>
                            <button class="btn btn-sm btn-warning w-25" data-bs-toggle="modal" data-bs-target="#editGameModal-@game.gameId">
                                Edit
                            </button>
                            <button class="btn btn-sm btn-danger w-25" data-bs-toggle="modal" data-bs-target="#deleteGameModal-@game.gameId">
                                Delete
                            </button>
                        </td>
                    </tr>

                    <!-- Edit Game Modal -->
                    <div class="modal fade" id="editGameModal-@game.gameId" tabindex="-1" aria-labelledby="editGameModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form asp-action="Edit" asp-route-id="@game.gameId" method="post">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="editGameModalLabel">Edit Game</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="mb-3">
                                            <label for="gameName" class="form-label">Game Name</label>
                                            <input type="text" name="GameName" class="form-control" value="@game.gameName" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="stockQuantity" class="form-label">Stock Quantity</label>
                                            <input type="number" name="StockQuantity" class="form-control" value="@game.gameStock" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="price" class="form-label">Price</label>
                                            <input type="text" name="Price" class="form-control" value="@game.gamePrice" required>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-success">Save Changes</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- Delete Game Modal -->
                    <div class="modal fade" id="deleteGameModal-@game.gameId" tabindex="-1" aria-labelledby="deleteGameModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form asp-action="Delete" asp-route-id="@game.gameId" method="post">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="deleteGameModalLabel">Delete Game</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to delete <strong>@game.gameName</strong>?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">No games found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Add New Game Modal -->
<div class="modal fade" id="addGameModal" tabindex="-1" aria-labelledby="addGameModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Create" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="addGameModalLabel">Add New Game</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="gameName" class="form-label">Game Name</label>
                        <input type="text" name="GameName" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="gameImage" class="form-label">Image URL</label>
                        <input type="text" name="GameImage" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="stockQuantity" class="form-label">Stock Quantity</label>
                        <input type="number" name="StockQuantity" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="price" class="form-label">Price</label>
                        <input type="text" name="Price" class="form-control" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Add Game</button>
                </div>
            </form>
        </div>
    </div>
</div>

