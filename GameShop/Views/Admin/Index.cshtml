@model IEnumerable<GameShop.Models.GameTable>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1>ระบบควบคุม</h1>
</div>

<div class="container my-4">
    <!-- Add New Button -->
    <div class="d-flex justify-content-end">
        <button class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#addGameModal">
            เพิ่มเกมใหม่
        </button>
    </div>

    <!-- Add -->
    <div class="modal fade" id="addGameModal" tabindex="-1" aria-labelledby="addGameModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-action="Create" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addGameModalLabel">เพิ่มเกมใหม่</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="ปิดหน้าต่าง"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="gameName" class="form-label">Game Name</label>
                            <input type="text" name="GameName" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label for="gameImage" class="form-label">Image URL</label>
                            <input type="text" name="GameImage" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label for="stockQuantity" class="form-label">Stock Quantity</label>
                            <input type="number" name="StockQuantity" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label for="price" class="form-label">Price</label>
                            <input type="text" name="Price" class="form-control" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ปิดหน้าต่าง</button>
                        <button type="submit" class="btn btn-primary">เพิ่ม</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Table -->
    <table class="table table-striped table-bordered text-center align-middle">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Image</th>
                <th>Name</th>
                <th>Stock</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @* int index = 1; *@
                foreach (var game in Model)
                {
                    <tr>
                        <td>@game.gameId</td>
                        <td class="text-center">
                            <img src="@game.gameImage" alt="@game.gameName" style="width: 100px; height: 100px; object-fit: cover;">
                        </td>
                        <td>@game.gameName</td>
                        <td>@game.gameStock</td>
                        <td>@game.gamePrice</td>
                        <td>
                            <button class="btn btn-sm btn-warning w-30" data-bs-toggle="modal" data-bs-target="#editGameModal-@game.gameId">
                                แก้ไข
                            </button>
                            <button class="btn btn-sm btn-danger w-30" data-bs-toggle="modal" data-bs-target="#deleteGameModal-@game.gameId">
                                ลบ
                            </button>
                        </td>
                    </tr>

                    <!-- Edit -->
                    <div class="modal fade" id="editGameModal-@game.gameId" tabindex="-1" aria-labelledby="editGameModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form asp-action="Edit" asp-route-id="@game.gameId" method="post">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="editGameModalLabel">แก้ไขข้อมูล</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="ปิดหน้าต่าง"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="mb-3">
                                            <label for="gameName" class="form-label">Game Name</label>
                                            <input type="text" name="GameName" class="form-control" value="@game.gameName" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="stockQuantity" class="form-label">Stock Quantity</label>
                                            <input type="number" name="StockQuantity" class="form-control" value="@game.gameStock" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="price" class="form-label">Price</label>
                                            <input type="text" name="Price" class="form-control" value="@game.gamePrice" required>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ปิดหน้าต่าง</button>
                                        <button type="submit" class="btn btn-success">บันทึกการเปลี่ยนแปลง</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- Delete -->
                    <div class="modal fade" id="deleteGameModal-@game.gameId" tabindex="-1" aria-labelledby="deleteGameModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form asp-action="Delete" asp-route-id="@game.gameId" method="post">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="deleteGameModalLabel">ลบข้อมูล</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="ปิดหน้าต่าง"></button>
                                    </div>
                                    <div class="modal-body">
                                        คุณต้องการลบเกม <strong>@game.gameName</strong> หรือไม่?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ปิดหน้าต่าง</button>
                                        <button type="submit" class="btn btn-danger">ลบ</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">ไม่พบข้อมูลเกม</td>
                </tr>
            }
        </tbody>
    </table>
</div>